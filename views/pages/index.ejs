<div class="my-2" >
    <%- myCss.style %>
	<h1 class="title text-center">
		Ori&Yigal <%= username ? username : "Flowers Boutique" %>!
	</h1>
        <div class="form" id="content" border-style= "solid">
            <a href="#myModal" role="button" class="btn" data-toggle="modal"></a>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                log in
                </button>
            <div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Enter user-name and password</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="form">
                                <form class="login-form" >
                                    <input class="inputs" id="username" type="text" placeholder="username" />
                                    <input class="inputs" id="password" type="password" placeholder="password" />
                                    <label for="remember" style="word-wrap:break-word">
                            <input style="display: inline-block;" type="checkbox" id="remember">remember me
                        </label>
                                    <div id="error"></div>
                                    <div class="modal-footer" >
                                        <input class="login-button" id="login" type="submit" value="login">
                                        <p class="message">Not registered? <a href="register">Create an account</a></p>
                                    </div>
                                </form>
                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
</div>
